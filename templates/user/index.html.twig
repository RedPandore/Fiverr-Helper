{% extends 'layout.html.twig' %}

{% block title %}User management
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('adminUser') }}
{% endblock %}

{% block body %}
    <h1>User management</h1>
    <input type="text" id="myInput" onkeyup="searchForm()" placeholder="Search for names..">
    <table class="table table-hover table-striped" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr class="align-middle">
                    <td >{{ user.id }}</td>
                    <td><img src="{{ user.image }}"></td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% if user.roles == ["ROLE_USER"] %}
                            User
                        {% elseif user.roles == ["ROLE_admin"] %}
                            Admin
                        {% endif %}
                    </td>

                    <td>{{ user.level }}</td>

                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}" class="far fa-eye link-logo view"></a>
                            {{ include('user/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

<script>
function searchForm() {
  // Declare variables
  var input, filter, table, tr, td, i, txtValue;
  // Id of search input
  input = document.getElementById("myInput");
  filter = input.value.toUpperCase();
  // Id of table
  table = document.getElementById("myTable");
  // Tag of research case
  tr = table.getElementsByTagName("tr");

  // Loop through all table rows, and hide those who don't match the search query
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[2]; // change Index to column you want
    if (td) {
      txtValue = td.textContent || td.innerText;
      if (txtValue.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }
  }
}
</script>
{% endblock %}
