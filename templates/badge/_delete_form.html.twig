<form method="post" action="{{ path('badge_delete', {'id': badge.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ badge.id) }}">
    <button class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="left" title="Delete Badge">Delete</button>
</form>
