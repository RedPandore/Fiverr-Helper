{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }}
    -
                Modify your request
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('help') }}
{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <main data-aos="fade-right" class="container p-md-5 p-4 help-new">
        <header class="pt-md-5 pb-3 pt-4">
            <h1 class="h1 text-dark fw-bold mt-5">Modify your request</h1>
            <h2 class="h3 fw-light vertical-middle">Find the issue of your problem with other freelancers</h2>
        </header>
        {{ form_start(form)}}
        <div class="mt-3">
            {{form_label(form.category)}}
            {{form_widget(form.category, {'attr': {'class': 'form-control shadow-sm p-3 mb-3 rounded'}})}}
        </div>
        <div class="mt-3">
            {{form_label(form.subject)}}
            {{form_widget(form.subject, {'attr': {'class': 'form-control shadow-sm p-3 mb-3 rounded'}})}}
        </div>
        <div class="mt-3">
            {{form_label(form.description)}}
            {{form_widget(form.description, {'attr': {'class': 'form-control shadow-sm p-3 mb-3 rounded'}})}}
        </div>
        <div class="d-md-flex justify-content-between">
            <div>
                <button class="btn btn-primary fw-bold text-white mt-2 mb-md-4 mb-1">{{ button_label|default('Ask for help') }}</button>
                <a class="btn btn-outline-primary fw-bold mt-2 mb-4" href="{{ path('help_show', {help: help.id}) }}">Return to your request</a>
            </div>
            {% include "help/_delete_form.html.twig" %}
        </div>
        {{form_end(form)}}
    </main>
{% endblock %}
