{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('help') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('comment') }}
{% endblock %}

{% block body %}
    <main data-aos="fade-right" class="container p-md-5 p-4 help-show">
        <header class="pt-md-5 pb-3 pt-4">
            <h1 class="h1 text-dark fw-bold mt-5">{{ help.subject }}</h1>
            <h2 class="h3 fw-light">Asked
                {{ help.createdAt|format_datetime(locale='en') }}</h2>
        </header>
        <div class="d-flex flex-row profile-card align-items-center p-3 mb-3">
            <img src="{{ help.applicant.image }}" alt="picture of {{ help.applicant.username }}" class="me-3">
            <div>
                <h3 class="h4 mb-0 text-wrap">{{ help.applicant.username }}</h3>
                <p class="mb-0 badge bg-primary">
                    Level
                    {{ help.applicant.level }}
                </p>
            </div>
        </div>

        <div class="p-4 mb-4 shadow-sm content">
            <p class="m-0 p-0">{{ help.description }}</p>
        </div>

        <div class="comments mt-5">
            <h3 class="h3 mb-3">Comments</h3>
            <div class="comments-show">
                {% include "help/_comment.html.twig" %}
            </div>
            <div class="new-comment mt-4">
                {% include "comment/new.html.twig" %}
            </div>
        </div>
    </main>
{% endblock %}
